<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:scrollbars="none">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#f8f8f8"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="8dp"
                android:background="#D7D6DE" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/order_status_detail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/order_detail_name"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="13dp"
                        android:gravity="center_horizontal"
                        android:text="订单编号：12345678"
                        android:textSize="25sp"/>
                    <TextView
                        android:id="@+id/order_detail_status"
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="155dp"
                        android:text="状态：已完成"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="8dp"
                android:background="#D7D6DC" />

            <LinearLayout
                android:id="@+id/order_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/order_price"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_id"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
<!--
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="16dp"
                    android:background="#D7D6DE" />-->

                <include
                    android:id="@+id/order_createat"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_phone"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_address"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_paymode"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <include
                    android:id="@+id/order_ispay"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_deliverymode"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_time"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_message"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_remark"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_remark1"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <include
                    android:id="@+id/order_remark2"
                    layout="@layout/order_detail_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
