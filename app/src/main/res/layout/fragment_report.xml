<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/report_damages_wrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/merchandise_name_wrap"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="68dp"
        android:background="@drawable/item_bg_normal">

        <LinearLayout
            android:id="@+id/llyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="出"
                android:textSize="38sp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="口"
                android:textSize="38sp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="  "
                android:textSize="38sp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="章"
                android:textSize="38sp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/report_damages_director_wrap"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/merchandise_name_wrap"
        android:background="@drawable/item_bg_normal">

        <TextView
            android:id="@+id/tv_report_damages_director"
            style="@style/InfoOptionText"
            android:layout_marginLeft="32dp"
            android:text="拼音："
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_report_damages_director_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_report_damages_director"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="chukouchengzhang"
            android:textColor="#A5A5A5"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/report_damages_proposer_wrap"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/report_damages_director_wrap"
        android:background="@drawable/item_bg_normal">

        <TextView
            android:id="@+id/tv_report_damages_proposer"
            style="@style/InfoOptionText"
            android:layout_marginLeft="32dp"
            android:text="词意："
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_report_damages_proposer_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_report_damages_proposer"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="哈哈哈哈"
            android:textColor="#A5A5A5"
            android:textSize="16sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/report_damages_reason_wrap"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/report_damages_proposer_wrap"
        android:background="#ffe3e3e3">

        <TextView
            style="@style/InfoOptionText"
            android:layout_marginLeft="32dp"
            android:text="选择其中一项："
            android:textStyle="bold"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_report_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/report_damages_reason_wrap"
        android:layout_above="@+id/btn_report_damages_commit"
        android:background="@drawable/item_bg_normal"
        android:visibility="visible">
        <RadioGroup
            android:id="@+id/rg_damages_reason"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="陈"
                android:layout_marginLeft="26dp"
                android:textSize="26sp"
                android:textColor="#A5A5A5"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:drawableRight="@drawable/umeng_update_btn_check_off_holo_light"
                android:layout_marginRight="16dp"
                android:button="@null"/>
            <!--android:checked="true"-->
            <RadioButton
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="成"
                android:layout_marginLeft="26dp"
                android:textSize="26sp"
                android:textColor="#A5A5A5"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:drawableRight="@drawable/umeng_update_btn_check_off_holo_light"
                android:layout_marginRight="16dp"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="城"
                android:layout_marginLeft="26dp"
                android:textSize="26sp"
                android:textColor="#A5A5A5"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:drawableRight="@drawable/umeng_update_btn_check_off_holo_light"
                android:layout_marginRight="16dp"
                android:button="@null"/>
            <RadioButton
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="撑"
                android:layout_marginLeft="26dp"
                android:textSize="26sp"
                android:textColor="#A5A5A5"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:drawableRight="@drawable/umeng_update_btn_check_off_holo_light"
                android:layout_marginRight="16dp"
                android:button="@null"/>
        </RadioGroup>
    </ScrollView>

    <Button
        android:id="@+id/btn_report_damages_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_logout"
        android:text="确定"
        android:textColor="@drawable/button_text_logout"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"/>

</RelativeLayout>
